<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Welcome Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Analyze News Articles"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“°"
                    android:textSize="24sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Confidence Threshold Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸŽ¯ Detection Sensitivity"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/tvThresholdValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50%"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        android:background="@drawable/threshold_badge_background"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Set how strict the model should be before classifying news as real"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <SeekBar
                        android:id="@+id/seekBarThreshold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="50"
                        android:progress="30"
                        android:progressTint="?attr/colorPrimary"
                        android:thumbTint="?attr/colorPrimary"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="20%\nLenient"
                            android:textSize="10sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:gravity="start"
                            android:lineSpacingExtra="2dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="45%\nBalanced"
                            android:textSize="10sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:gravity="center"
                            android:lineSpacingExtra="2dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="70%\nStrict"
                            android:textSize="10sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:gravity="end"
                            android:lineSpacingExtra="2dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/info_background"
                    android:padding="12dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvThresholdExplanation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Balanced: Model needs 50% confidence to classify as real news"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Text Input Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter News Text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxStrokeColor="?attr/colorPrimary"
                    android:hint="Paste news article, headline, or text here...">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNewsText"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:gravity="top|start"
                        android:inputType="textMultiLine|textCapSentences"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface"
                        android:lineSpacingExtra="2dp"
                        android:scrollbars="vertical" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tvCharCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 characters"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:gravity="end"
                    android:layout_marginBottom="16dp" />

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnClear"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Clear"
                        android:textColor="@color/error_red"
                        app:strokeColor="@color/error_red"
                        app:cornerRadius="8dp"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btnAnalyze"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="2"
                        android:text="ðŸ” Analyze Text"
                        android:textColor="?attr/colorOnPrimary"
                        android:textStyle="bold"
                        android:backgroundTint="?attr/colorPrimary"
                        app:cornerRadius="8dp"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Results Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/resultsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardUseCompatPadding="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Analysis Results"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/result_background"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvResult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Analyzing..."
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvConfidence"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Confidence: 0%"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvThresholdUsed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Threshold used: 50%"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                </LinearLayout>

                <!-- Action Buttons Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <!-- Explain Button -->
                    <Button
                        android:id="@+id/btnExplain"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="ðŸ§  Explain"
                        android:textColor="?attr/colorSecondary"
                        app:strokeColor="?attr/colorSecondary"
                        app:cornerRadius="8dp"
                        android:layout_marginEnd="8dp" />

                    <!-- Feedback Button -->
                    <Button
                        android:id="@+id/btnFeedback"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="ðŸš© Wrong?"
                        android:textColor="?attr/colorTertiary"
                        app:strokeColor="?attr/colorTertiary"
                        app:cornerRadius="8dp"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Feedback Dialog Card (Initially Hidden) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/feedbackCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardUseCompatPadding="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸš© Report Incorrect Prediction"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/btnCloseFeedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ•"
                        android:textSize="18sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Help us improve! What should this text be classified as?"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="16dp" />

                <!-- Current Prediction Display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/info_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ¤–"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvCurrentPrediction"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Model predicted: REAL (92% confidence)"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                </LinearLayout>

                <!-- Correction Options -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Correct Classification:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="12dp" />

                <RadioGroup
                    android:id="@+id/rgCorrection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/rbReal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="âœ… This is REAL news"
                        android:textSize="14sp"
                        android:textColor="@color/success_green"
                        android:padding="8dp" />

                    <RadioButton
                        android:id="@+id/rbFake"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="âš ï¸ This is FAKE news"
                        android:textSize="14sp"
                        android:textColor="@color/error_red"
                        android:padding="8dp" />

                </RadioGroup>

                <!-- Submit Feedback Button -->
                <Button
                    android:id="@+id/btnSubmitFeedback"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="ðŸ“¤ Submit Feedback"
                    android:textColor="?attr/colorOnTertiary"
                    android:textStyle="bold"
                    android:backgroundTint="?attr/colorTertiary"
                    app:cornerRadius="8dp"
                    android:enabled="false" />

                <!-- Thank You Message -->
                <TextView
                    android:id="@+id/tvFeedbackThanks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ™ Thank you for your feedback! This helps improve our model."
                    android:textSize="12sp"
                    android:textColor="@color/success_green"
                    android:textStyle="italic"
                    android:layout_marginTop="12dp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- SHAP Explanation Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/explanationCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardUseCompatPadding="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ§  AI Explanation"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SHAP"
                        android:textSize="10sp"
                        android:textColor="?attr/colorSecondary"
                        android:background="@drawable/shap_badge_background"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How each feature influenced the prediction:"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="16dp" />

                <!-- Feature Contributions -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/explanation_background"
                    android:padding="16dp">

                    <!-- Embeddings Contribution -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ðŸ“ Content Analysis"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface" />

                            <TextView
                                android:id="@+id/tvEmbeddingsValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+0.25"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/success_green" />

                        </LinearLayout>

                        <View
                            android:id="@+id/progressEmbeddings"
                            android:layout_width="0dp"
                            android:layout_height="6dp"
                            android:background="@drawable/progress_bar_background" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Language patterns and semantic meaning"
                            android:textSize="10sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <!-- Sentiment Contribution -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ðŸ˜Š Sentiment Analysis"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface" />

                            <TextView
                                android:id="@+id/tvSentimentValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-0.12"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/error_red" />

                        </LinearLayout>

                        <View
                            android:id="@+id/progressSentiment"
                            android:layout_width="0dp"
                            android:layout_height="6dp"
                            android:background="@drawable/progress_bar_background" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Emotional tone and polarity"
                            android:textSize="10sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <!-- Clickbait Contribution -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ðŸŽ¯ Clickbait Detection"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface" />

                            <TextView
                                android:id="@+id/tvClickbaitValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+0.08"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/success_green" />

                        </LinearLayout>

                        <View
                            android:id="@+id/progressClickbait"
                            android:layout_width="0dp"
                            android:layout_height="6dp"
                            android:background="@drawable/progress_bar_background" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sensational language and attention-grabbing phrases"
                            android:textSize="10sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Explanation Summary -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/info_background"
                    android:padding="12dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tvExplanationSummary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="The model's decision was primarily influenced by content analysis patterns."
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Loading Layout -->
        <LinearLayout
            android:id="@+id/loadingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminateTint="?attr/colorPrimary"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvLoadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analyzing text..."
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
